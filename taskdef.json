{
  "family": "echo-mcp-server",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "echo-mcp-server",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/echo-mcp-server:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "ENVIRONMENT", "value": "production"},
        {"name": "DEBUG", "value": "false"},
        {"name": "DATABASE_URL", "value": "mysql://H4gZqYNHotbvC1j.root:DO92V0EWOxYwXkIU@gateway01.us-east-1.prod.aws.tidbcloud.com:4000/test"},
        {"name": "REDIS_URL", "value": "redis://echo_redis:6379"},
        {"name": "JWT_SECRET_KEY", "value": "your-jwt-secret-key"},
        {"name": "ADMIN_SECRET_KEY", "value": "your-admin-secret-key"}
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:echo-mcp/openai-key"
        },
        {
          "name": "DATABASE_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:echo-mcp/db-password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/echo-mcp-server",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
