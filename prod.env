# Production Environment Configuration for Echo MCP Server
# This file contains production-ready environment variables
# Store sensitive values in AWS Secrets Manager or Parameter Store

# Application Configuration
APP_NAME=Echo MCP Server
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000

# Database Configuration (TiDB - MySQL compatible)
DATABASE_URL=mysql+mysqlconnector://H4gZqYNHotbvC1j.root:DO92V0EWOxYwXkIU@gateway01.us-east-1.prod.aws.tidbcloud.com:4000/echo_mcp_tidb
DATABASE_ECHO=false

# Redis Configuration (AWS ElastiCache)
REDIS_URL=redis://echo_redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-production-jwt-secret-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin Configuration
ADMIN_SECRET_KEY=your-production-admin-secret-key

# CORS Configuration
CORS_ORIGINS=["https://api.echo-mcp-server.qkiu.tech", "https://qkiu.tech"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# AWS Configuration
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# OpenAI Configuration (store in AWS Secrets Manager)
OPENAI_API_KEY=your-openai-api-key

# Service Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
REQUEST_TIMEOUT=30

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Security Headers
SECURE_HEADERS=true
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
