# Docker Environment Configuration for FastAPI MCP Backend
# Copy this file to .env and modify values as needed

# Application Settings
APP_NAME=FastAPI MCP Backend
APP_VERSION=1.0.0
DEBUG=true
PORT=8000

# Database Settings (TiDB)
TIDB_HOST=tidb
TIDB_PORT=4000
TIDB_USER=root
TIDB_PASSWORD=
TIDB_DATABASE=fastapi_mcp

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Settings
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Settings (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Security Settings
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info