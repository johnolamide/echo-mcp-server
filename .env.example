# Echo MCP Server Environment Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
APP_NAME=Echo MCP Server
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=dev
HOST=0.0.0.0
PORT=8000

# Database Configuration (TiDB/MySQL)
DATABASE_URL=mysql://echo_user:echo_password@tidb:4000/echo_mcp
DATABASE_ECHO=false
TIDB_HOST=localhost
TIDB_PORT=4000
TIDB_USER=root
TIDB_PASSWORD=
TIDB_DATABASE=echo_mcp

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Bolt Food API Configuration
BOLT_FOOD_API_KEY=your_bolt_food_api_key
BOLT_FOOD_API_SECRET=your_bolt_food_api_secret
BOLT_FOOD_WEBHOOK_SECRET=your_bolt_food_webhook_secret
BOLT_FOOD_BASE_URL=https://api.bolt.eu/food
BOLT_FOOD_API_URL=https://node.bolt.eu/delivery-provider-pos
BOLT_FOOD_INTEGRATOR_ID=your_bolt_food_integrator_id
BOLT_FOOD_SECRET_KEY=your_bolt_food_secret_key

# Bolt Stores API Configuration
BOLT_STORES_API_KEY=your_bolt_stores_api_key
BOLT_STORES_API_SECRET=your_bolt_stores_api_secret
BOLT_STORES_WEBHOOK_SECRET=your_bolt_stores_webhook_secret
BOLT_STORES_BASE_URL=https://api.bolt.eu/stores
BOLT_STORES_API_URL=https://node.bolt.eu/delivery-provider-pos
BOLT_STORES_INTEGRATOR_ID=your_bolt_stores_integrator_id
BOLT_STORES_SECRET_KEY=your_bolt_stores_secret_key

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@echo-mcp.com
FROM_EMAIL=noreply@echo-mcp.com

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# Security Configuration
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12

# Admin Configuration
ADMIN_SECRET_KEY=change-this-admin-secret-in-production

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your_aws_account_id
IMAGE_REPO_NAME=echo-mcp-server

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
BOLT_REGION_ID=123